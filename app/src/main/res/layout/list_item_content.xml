<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/txt_item_time"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="time"
        android:gravity="center_vertical"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_item_price"/>

    <TextView
        android:id="@+id/txt_item_price"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="price"
        android:gravity="center_vertical"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/txt_item_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_item_amount"/>

    <TextView
        android:id="@+id/txt_item_amount"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="amount"
        android:gravity="center_vertical|right"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/txt_item_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>